<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource
            name="jdbc/postgres"
            auth="Container"
            type="javax.sql.DataSource"
            username="postgres"
            password="postgres"
            driverClassName="org.postgresql.Driver"
            url="jdbc:postgresql://localhost:5432/postgres"
            maxTotal="20"
            maxIdle="10"
            minIdle="5"
            maxWaitMillis="-1"/>
</Context>